<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 播放器、亮度调节toast -->
    <style name="volume_adjust_dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/volume_adjust_transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/volume_adjust_dialog_anim</item>
    </style>

    <style name="volume_adjust_dialog_anim">
        <item name="android:windowEnterAnimation">@anim/volume_adjust_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/volume_adjust_dailog_out</item>
    </style>



    <declare-styleable name="TvProgressBar">
        <!-- 背景图片 -->
        <attr name="background" format="reference" />
        <!-- 已走过的进度图片 -->
        <attr name="progress" format="reference" />
        <!-- 滑块图片 -->
        <attr name="thumb" format="reference" />
        <!-- 滑块宽度 -->
        <attr name="thumbWidth" format="reference|dimension" />
        <!-- 进度条宽度 -->
        <attr name="progressWidth" format="reference|dimension" />
        <!-- 进度条方向       0：水平      1：竖直 -->
        <attr name="orientations" format="reference|integer" />
    </declare-styleable>

</resources>